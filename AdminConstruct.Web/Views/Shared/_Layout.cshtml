
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AdminConstruct</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- Font Awesome para iconos -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
    <!-- Hoja de estilos personalizada -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
</head>
<body>

    <div class="sidebar">
        <div class="sidebar-header">
            <a asp-area="Admin" asp-controller="Admin" asp-action="Index" class="sidebar-brand">
                <i class="fas fa-cubes me-2"></i> <!-- Icono de la marca -->
                <span>AdminConstruct</span>
            </a>
        </div>
        <ul class="sidebar-nav">
            <li class="sidebar-item">
                <a asp-area="Admin" asp-controller="Admin" asp-action="Index" class="sidebar-link">
                    <i class="fas fa-tachometer-alt me-2"></i>
                    <span>Dashboard</span>
                </a>
            </li>
            <li class="sidebar-item">
                <a asp-area="Admin" asp-controller="Products" asp-action="Index" class="sidebar-link">
                    <i class="fas fa-box-open me-2"></i>
                    <span>Productos</span>
                </a>
            </li>
             <li class="sidebar-item">
                <a asp-area="Admin" asp-controller="Machinery" asp-action="Index" class="sidebar-link">
                     <i class="fas fa-hard-hat me-2"></i>
                    <span>Maquinaria</span>
                </a>
            </li>
            <li class="sidebar-item">
                <a asp-area="Admin" asp-controller="Customers" asp-action="Index" class="sidebar-link">
                    <i class="fas fa-users me-2"></i>
                    <span>Clientes</span>
                </a>
            </li>
            <li class="sidebar-item">
                <a asp-area="Admin" asp-controller="Sales" asp-action="Index" class="sidebar-link">
                    <i class="fas fa-dollar-sign me-2"></i>
                    <span>Ventas</span>
                </a>
            </li>
            <li class="sidebar-item">
                <a asp-area="Admin" asp-controller="ExcelImport" asp-action="ExcelImport" class="sidebar-link">
                    <i class="fas fa-file-excel me-2"></i>
                    <span>Carga Masiva</span>
                </a>
            </li>
        </ul>
    </div>

    <div class="main-content">
        <nav class="navbar navbar-expand-lg navbar-light bg-light topbar">
            <div class="container-fluid">
                <!-- Botón para ocultar/mostrar sidebar en móviles -->
                <button class="btn btn-primary d-md-none" id="sidebar-toggle">
                    <i class="fas fa-bars"></i>
                </button>

                <!-- Espaciador -->
                <div class="flex-grow-1"></div>

                <!-- Menú de usuario -->
                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fas fa-user-circle me-1"></i>
                            @User.Identity.Name
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                            <li>
                                <form method="post" asp-controller="Account" asp-action="Logout">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="dropdown-item">
                                        <i class="fas fa-sign-out-alt me-2"></i>
                                        Cerrar Sesión
                                    </button>
                                </form>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </nav>

        <main class="container-fluid p-4">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    <!-- Script para el toggle del sidebar en móvil -->
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            const sidebar = document.querySelector(".sidebar");
            const sidebarToggle = document.getElementById("sidebar-toggle");
            
            if (sidebarToggle) {
                sidebarToggle.addEventListener("click", function() {
                    sidebar.classList.toggle("active");
                });
            }
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
