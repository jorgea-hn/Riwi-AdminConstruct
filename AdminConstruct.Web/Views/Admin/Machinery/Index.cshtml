@model IEnumerable<AdminConstruct.Web.Models.Machinery>

@{
    ViewData["Title"] = "Maquinaria";
}

<div class="card">
    <div class="card-header">
        <div class="d-flex justify-content-between align-items-center">
            <h4 class="mb-0">Gesti√≥n de Maquinaria</h4>
            <div>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus me-2"></i> Nueva Maquinaria
                </a>
                <a asp-action="ExportToExcel" class="btn btn-success">
                    <i class="fas fa-file-excel me-2"></i> Exportar a Excel
                </a>
                <a asp-action="ExportToPdf" class="btn btn-danger">
                    <i class="fas fa-file-pdf me-2"></i> Exportar a PDF
                </a>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Name)</th>
                        <th>@Html.DisplayNameFor(model => model.Stock)</th>
                        <th>@Html.DisplayNameFor(model => model.Price)</th>
                        <th>@Html.DisplayNameFor(model => model.IsActive)</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
            @foreach (var item in Model) {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.Stock)</td>
                        <td>@Html.DisplayFor(modelItem => item.Price)</td>
                        <td>
                            @if (item.IsActive)
                            {
                                <span class="badge bg-success">Activo</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Inactivo</span>
                            }
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary me-1">
                                <i class="fas fa-pencil-alt"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                        </td>
                    </tr>
            }
                </tbody>
            </table>
        </div>
    </div>
</div>
