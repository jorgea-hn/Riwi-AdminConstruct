@model IEnumerable<AdminConstruct.Web.ViewModels.SaleViewModel>

@{
    ViewBag.Title = "Listado de Ventas";
}

<h2>Listado de Ventas</h2>

<p>
    <a asp-controller="Export" asp-action="ExportSalesToPDF" class="btn btn-primary">
        Exportar a PDF
    </a>
    <a asp-controller="Export" asp-action="ExportSalesToExcel" class="btn btn-success">
        Exportar a Excel
    </a>

</p>

<table class="table table-bordered table-striped">
    <thead>
    <tr>
        <th>ID</th>
        <th>Cliente</th>
        <th>Fecha</th>
        <th>Total</th>
        <th>Acciones</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var sale in Model)
    {
        var subtotal = sale.Details.Sum(d => d.Quantity * d.UnitPrice);
        var iva = subtotal * 0.12m;
        var total = subtotal + iva;

        <tr>
            <td>@sale.Id</td>
            <td>@sale.CustomerName</td>
            <td>@sale.Date.ToString("dd/MM/yyyy HH:mm")</td>
            <td>@total.ToString("C")</td>
            <td>
                <a class="btn btn-info btn-sm" href="@Url.Action("Details", "Sales", new { id = sale.Id })">Detalles</a>
            </td>
        </tr>
    }
    </tbody>
</table>