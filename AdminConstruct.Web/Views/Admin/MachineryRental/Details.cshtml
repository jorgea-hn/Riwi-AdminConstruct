@model AdminConstruct.Web.Models.MachineryRental

@{
    ViewData["Title"] = "Detalles del Alquiler";
}

<h1>Detalles del Alquiler</h1>

<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between align-items-center">
        <h6 class="m-0 font-weight-bold text-primary">Alquiler #@Model.Id.ToString().Substring(0, 8)</h6>
        <div>
            @if (Model.IsActive)
            {
                <span class="badge bg-success">Activo</span>
            }
            else
            {
                <span class="badge bg-secondary">Finalizado</span>
            }
        </div>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <h5 class="text-primary mb-3">Información del Cliente</h5>
                <dl class="row">
                    <dt class="col-sm-4">Nombre</dt>
                    <dd class="col-sm-8">@Model.Customer.Name</dd>
                    
                    <dt class="col-sm-4">Documento</dt>
                    <dd class="col-sm-8">@Model.Customer.Document</dd>
                    
                    <dt class="col-sm-4">Email</dt>
                    <dd class="col-sm-8">@Model.Customer.Email</dd>
                    
                    <dt class="col-sm-4">Teléfono</dt>
                    <dd class="col-sm-8">@Model.Customer.Phone</dd>
                </dl>
            </div>
            <div class="col-md-6">
                <h5 class="text-primary mb-3">Información de la Maquinaria</h5>
                <dl class="row">
                    <dt class="col-sm-4">Maquinaria</dt>
                    <dd class="col-sm-8">@Model.Machinery.Name</dd>
                    
                    <dt class="col-sm-4">Descripción</dt>
                    <dd class="col-sm-8">@Model.Machinery.Description</dd>
                </dl>
            </div>
        </div>
        
        <hr />
        
        <h5 class="text-primary mb-3">Detalles del Préstamo</h5>
        <div class="row">
            <div class="col-md-6">
                <dl class="row">
                    <dt class="col-sm-4">Fecha Inicio</dt>
                    <dd class="col-sm-8">@Model.StartDateTime.ToString("dd/MM/yyyy HH:mm")</dd>
                    
                    <dt class="col-sm-4">Fecha Fin (Pactada)</dt>
                    <dd class="col-sm-8">@Model.EndDateTime.ToString("dd/MM/yyyy HH:mm")</dd>
                    
                    <dt class="col-sm-4">Fecha Devolución</dt>
                    <dd class="col-sm-8">
                        @if (Model.ActualReturnDate.HasValue)
                        {
                            @Model.ActualReturnDate.Value.ToString("dd/MM/yyyy HH:mm")
                        }
                        else
                        {
                            <span class="text-muted">Pendiente</span>
                        }
                    </dd>
                </dl>
            </div>
            <div class="col-md-6">
                <dl class="row">
                    <dt class="col-sm-4">Precio por Día</dt>
                    <dd class="col-sm-8">@Model.PricePerDay.ToString("C")</dd>
                    
                    <dt class="col-sm-4">Total</dt>
                    <dd class="col-sm-8 font-weight-bold text-success">@Model.TotalAmount.ToString("C")</dd>
                </dl>
            </div>
        </div>
        
        @if (!string.IsNullOrEmpty(Model.Notes))
        {
            <hr />
            <h5 class="text-primary mb-3">Notas</h5>
            <p>@Model.Notes</p>
        }
    </div>
    <div class="card-footer">
        <a asp-action="Index" class="btn btn-secondary">Volver al Listado</a>
        @if (Model.IsActive)
        {
            <a asp-action="Return" asp-route-id="@Model.Id" class="btn btn-warning">Registrar Devolución</a>
        }
        <button class="btn btn-info" onclick="alert('Funcionalidad de factura pendiente de implementación')">
            <i class="fas fa-file-pdf"></i> Generar Factura
        </button>
    </div>
</div>
