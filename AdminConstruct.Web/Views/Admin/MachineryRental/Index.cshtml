@model IEnumerable<AdminConstruct.Web.Models.MachineryRental>

@{
    ViewData["Title"] = "Alquileres de Maquinaria";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Alquileres de Maquinaria</h1>
    <div>
        <a asp-action="ExportToPDF" class="btn btn-danger me-2">
            <i class="fas fa-file-pdf"></i> PDF
        </a>
        <a asp-action="ExportToExcel" class="btn btn-success me-2">
            <i class="fas fa-file-excel"></i> Excel
        </a>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Nuevo Alquiler
        </a>
    </div>
</div>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Listado de Alquileres</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Estado</th>
                        <th>Maquinaria</th>
                        <th>Cliente</th>
                        <th>Inicio</th>
                        <th>Fin</th>
                        <th>Total</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @if (item.IsActive)
                                {
                                    if (DateTime.Now > item.EndDateTime)
                                    {
                                        <span class="badge bg-danger">Vencido</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">Activo</span>
                                    }
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Finalizado</span>
                                }
                            </td>
                            <td>@Html.DisplayFor(modelItem => item.Machinery.Name)</td>
                            <td>@Html.DisplayFor(modelItem => item.Customer.Name)</td>
                            <td>@item.StartDateTime.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>@item.EndDateTime.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>@item.TotalAmount.ToString("C")</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm" title="Detalles">
                                        <i class="fas fa-info-circle"></i>
                                    </a>
                                    @if (item.IsActive)
                                    {
                                        <a asp-action="Return" asp-route-id="@item.Id" class="btn btn-warning btn-sm" title="Registrar DevoluciÃ³n">
                                            <i class="fas fa-undo"></i>
                                        </a>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
