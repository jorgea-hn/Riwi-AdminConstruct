@model IEnumerable<AdminConstruct.Web.ViewModels.ProductViewModel>

@{
    ViewData["Title"] = "Productos";
}

<h1 class="mb-4">Gesti√≥n de Productos</h1>

<div class="row">
    <div class="col-md-4">
        <div class="card text-white bg-primary mb-3">
            <div class="card-header">Total de Productos</div>
            <div class="card-body">
                <h5 class="card-title">@Model.Count()</h5>
                <p class="card-text">Productos registrados en el sistema</p>
            </div>
        </div>
    </div>
    
    
    <div class="col-md-8">
        <div class="card text-white bg-success mb-3">
            <div class="card-header">Exportar Informaci√≥n</div>
            <div class="card-body d-flex gap-2">
                <a asp-controller="Export" asp-action="ExportProductsToExcel" class="btn btn-light text-dark">
                    üì¶ Exportar Productos a Excel
                </a>
                <a asp-controller="Export" asp-action="ExportProductsToPDF" class="btn btn-light text-dark">
                    üìù Exportar Productos a PDF
                </a>
            </div>
        </div>
    </div>
</div>

<div class="card mt-4">
    <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
        <span>Listado de Productos</span>
        <a asp-action="Create" class="btn btn-light btn-sm text-dark">+ Agregar Producto</a>
    </div>
    <div class="card-body">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nombre</th>
                    <th>Precio</th>
                    <th>Stock</th>
                    <th>Descripci√≥n</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var producto in Model)
                {
                    <tr>
                        <td>@producto.Id</td>
                        <td>@producto.Name</td>
                        <td>@producto.Price.ToString("C")</td>
                        <td>@producto.StockQuantity</td>
                        <td>@producto.Description</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@producto.Id" class="btn btn-warning btn-sm">Editar</a>
                            <a asp-action="Details" asp-route-id="@producto.Id" class="btn btn-info btn-sm">Detalles</a>
                            <a asp-action="Delete" asp-route-id="@producto.Id" class="btn btn-danger btn-sm">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
