@model AdminConstruct.Web.ViewModels.ProductViewModel

@{
    ViewData["Title"] = "Eliminar Producto";
}

<h2>¿Deseas eliminar este producto?</h2>

<div class="alert alert-danger">
    <strong>@Model.Name</strong> será eliminado permanentemente.
</div>

<dl class="row">
    <dt class="col-sm-3">Precio</dt>
    <dd class="col-sm-9">@Model.Price.ToString("C")</dd>

    <dt class="col-sm-3">Stock</dt>
    <dd class="col-sm-9">@Model.StockQuantity</dd>

    <dt class="col-sm-3">Descripción</dt>
    <dd class="col-sm-9">@Model.Description</dd>
</dl>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>