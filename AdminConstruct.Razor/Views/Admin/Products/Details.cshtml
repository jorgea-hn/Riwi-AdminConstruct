@model AdminConstruct.Ryzor.ViewModels.ProductViewModel

@{
    ViewData["Title"] = "Detalles del Producto";
}

<h2>Detalles del Producto</h2>

<div class="card p-4">
    <dl class="row">
        <dt class="col-sm-3">Nombre</dt>
        <dd class="col-sm-9">@Model.Name</dd>

        <dt class="col-sm-3">Precio</dt>
        <dd class="col-sm-9">@Model.Price.ToString("C")</dd>

        <dt class="col-sm-3">Stock</dt>
        <dd class="col-sm-9">@Model.StockQuantity</dd>

        <dt class="col-sm-3">Descripci√≥n</dt>
        <dd class="col-sm-9">@Model.Description</dd>
    </dl>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</div>