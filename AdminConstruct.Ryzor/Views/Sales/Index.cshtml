@model IEnumerable<AdminConstruct.Ryzor.Models.Sale>
@{
    ViewData["Title"] = "Ventas";
}

<div class="flex items-center justify-between mb-4">
    <h1 class="text-2xl font-semibold">Ventas</h1>
    <a class="inline-flex items-center px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700" asp-action="Create">Nueva venta</a>
</div>

<div class="bg-white rounded-lg shadow overflow-x-auto">
    <table class="min-w-full">
        <thead class="bg-gray-100 text-left">
        <tr>
            <th class="px-4 py-2">Fecha</th>
            <th class="px-4 py-2">Cliente</th>
            <th class="px-4 py-2"></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var s in Model)
        {
            <tr class="border-t">
                <td class="px-4 py-2">@s.Date.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</td>
                <td class="px-4 py-2">@s.Customer.Name</td>
                <td class="px-4 py-2 text-right">
                    <a class="text-blue-700 underline" asp-action="Details" asp-route-id="@s.Id">Ver</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>


