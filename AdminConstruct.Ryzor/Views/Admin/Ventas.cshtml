@{
    ViewData["Title"] = "Ventas";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Ventas</h1>
    <a class="btn btn-success" asp-controller="Ventas" asp-action="Crear">Nueva Venta</a>
</div>

<div class="row mb-4">
    <div class="col-md-4">
        <div class="card text-white bg-warning">
            <div class="card-header">Total Ventas</div>
            <div class="card-body">
                <h5 class="card-title">@ViewBag.TotalVentas</h5>
                <p class="card-text">Ventas realizadas</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-white bg-info">
            <div class="card-header">Ventas del Mes</div>
            <div class="card-body">
                <h5 class="card-title">@ViewBag.VentasMes</h5>
                <p class="card-text">Ventas registradas este mes</p>
            </div>
        </div>
    </div>
</div>

<table class="table table-striped">
    <thead class="table-dark">
    <tr>
        <th>NÂ° Venta</th>
        <th>Cliente</th>
        <th>Fecha</th>
        <th>Total</th>
        <th>Estado</th>
        <th>Acciones</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var venta in Model)
    {
        <tr>
            <td>@venta.Id</td>
            <td>@venta.ClienteNombre</td>
            <td>@venta.Fecha.ToShortDateString()</td>
            <td>@venta.Total.ToString("C")</td>
            <td>@venta.Estado</td>
            <td>
                <a class="btn btn-sm btn-primary" asp-action="Detalles" asp-route-id="@venta.Id">Detalles</a>
                <a class="btn btn-sm btn-danger" asp-action="Eliminar" asp-route-id="@venta.Id">Eliminar</a>
            </td>
        </tr>
    }
    </tbody>
</table>