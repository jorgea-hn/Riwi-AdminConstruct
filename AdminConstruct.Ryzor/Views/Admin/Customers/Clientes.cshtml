@model IEnumerable<AdminConstruct.Ryzor.Models.Customer>

@{
    ViewData["Title"] = "Clientes";
}

<h1>Gestión de Clientes</h1>

<form method="get" class="mb-3">
    <input type="text" name="search" placeholder="Buscar por nombre o documento" class="form-control" value="@Context.Request.Query["search"]" />
</form>

<a asp-action="Create" class="btn btn-success mb-3">+ Nuevo Cliente</a>

<table class="table table-striped">
    <thead>
    <tr>
        <th>Nombre</th>
        <th>Documento</th>
        <th>Email</th>
        <th>Teléfono</th>
        <th>Acciones</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var c in Model)
    {
        <tr>
            <td>@c.Name</td>
            <td>@c.Document</td>
            <td>@c.Email</td>
            <td>@c.Phone</td>
            <td>
                <a asp-action="Edit" asp-route-id="@c.Id" class="btn btn-warning btn-sm">Editar</a>
                <a asp-action="Details" asp-route-id="@c.Id" class="btn btn-info btn-sm">Detalles</a>
                <a asp-action="Delete" asp-route-id="@c.Id" class="btn btn-danger btn-sm">Eliminar</a>
            </td>
        </tr>
    }
    </tbody>
</table>