@{
    ViewData["Title"] = "Dashboard Administrativo";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0 text-gray-800">Panel Administrativo</h1>
</div>

<div class="row g-4">
    <!-- Tarjeta Productos -->
    <div class="col-md-4">
        <div class="card shadow-sm border-left-primary h-100">
            <div class="card-body d-flex align-items-center">
                <div class="me-3">
                    <i class="bi bi-box-seam fs-1 text-primary"></i>
                </div>
                <div>
                    <h5 class="card-title mb-1">Productos</h5>
                    <p class="card-text mb-0">@ViewBag.TotalProductos productos registrados</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Tarjeta Clientes -->
    <div class="col-md-4">
        <div class="card shadow-sm border-left-success h-100">
            <div class="card-body d-flex align-items-center">
                <div class="me-3">
                    <i class="bi bi-people fs-1 text-success"></i>
                </div>
                <div>
                    <h5 class="card-title mb-1">Clientes</h5>
                    <p class="card-text mb-0">@ViewBag.TotalClientes clientes registrados</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Tarjeta Ventas -->
    <div class="col-md-4">
        <div class="card shadow-sm border-left-warning h-100">
            <div class="card-body d-flex align-items-center">
                <div class="me-3">
                    <i class="bi bi-cart fs-1 text-warning"></i>
                </div>
                <div>
                    <h5 class="card-title mb-1">Ventas</h5>
                    <p class="card-text mb-0">@ViewBag.TotalVentas ventas realizadas</p>
                </div>
            </div>
        </div>
    </div>
</div>