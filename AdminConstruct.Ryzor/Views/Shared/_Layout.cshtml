<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - AdminConstruct.Ryzor</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/AdminConstruct.Ryzor.styles.css" asp-append-version="true"/>
</head>
<body class="bg-gray-50 text-gray-900">
<header class="border-b bg-white">
    <nav class="max-w-7xl mx-auto px-4 py-3 flex items-center justify-between">
        <div class="flex items-center gap-8">
            <a class="text-xl font-semibold" asp-area="" asp-controller="Home" asp-action="Index">Firmeza Admin</a>
            <ul class="hidden md:flex gap-6">
                <li>
                    <a class="hover:text-black" asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>
                </li>
                <li>
                    <a class="hover:text-black" asp-area="" asp-controller="Home" asp-action="Privacy">Privacidad</a>
                </li>
            </ul>
        </div>
        <div class="flex items-center">
            @await Html.PartialAsync("_LoginPartial")
        </div>
    </nav>
</header>
<div class="max-w-7xl mx-auto px-4 py-6 grid grid-cols-12 gap-6">
    <aside class="col-span-12 md:col-span-3 lg:col-span-2 bg-white rounded-lg shadow p-4 h-fit">
        <nav class="space-y-2">
            <a class="block px-3 py-2 rounded hover:bg-gray-100" asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>
            <a class="block px-3 py-2 rounded hover:bg-gray-100" asp-area="" asp-controller="Products" asp-action="Index">Productos</a>
            <a class="block px-3 py-2 rounded hover:bg-gray-100" asp-area="" asp-controller="Customers" asp-action="Index">Clientes</a>
            <a class="block px-3 py-2 rounded hover:bg-gray-100" asp-area="" asp-controller="Sales" asp-action="Index">Ventas</a>
            <a class="block px-3 py-2 rounded hover:bg-gray-100" asp-area="" asp-controller="Import" asp-action="Index">Importar Excel</a>
            <div class="pt-2 border-t"></div>
            <a class="block px-3 py-2 rounded hover:bg-gray-100" asp-area="" asp-controller="Export" asp-action="ProductsExcel">Exportar Productos (Excel)</a>
            <a class="block px-3 py-2 rounded hover:bg-gray-100" asp-area="" asp-controller="Export" asp-action="CustomersExcel">Exportar Clientes (Excel)</a>
            <a class="block px-3 py-2 rounded hover:bg-gray-100" asp-area="" asp-controller="Export" asp-action="SalesExcel">Exportar Ventas (Excel)</a>
        </nav>
    </aside>
    <main role="main" class="col-span-12 md:col-span-9 lg:col-span-10">
        @RenderBody()
    </main>
    
</div>

<footer class="border-t text-gray-600 bg-white">
    <div class="max-w-7xl mx-auto px-4 py-4 flex items-center justify-between">
        <span>&copy; 2025 - Firmeza</span>
        <a class="underline" asp-area="" asp-controller="Home" asp-action="Privacy">Privacidad</a>
    </div>
</footer>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>