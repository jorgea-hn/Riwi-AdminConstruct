@model AdminConstruct.Ryzor.Models.ViewModels.DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="grid grid-cols-1 md:grid-cols-3 gap-6">
    <div class="bg-white rounded-lg shadow p-6">
        <div class="text-sm text-gray-500">Productos</div>
        <div class="text-3xl font-semibold">@Model.TotalProducts</div>
    </div>
    <div class="bg-white rounded-lg shadow p-6">
        <div class="text-sm text-gray-500">Clientes</div>
        <div class="text-3xl font-semibold">@Model.TotalCustomers</div>
    </div>
    <div class="bg-white rounded-lg shadow p-6">
        <div class="text-sm text-gray-500">Ventas</div>
        <div class="text-3xl font-semibold">@Model.TotalSales</div>
    </div>
</div>