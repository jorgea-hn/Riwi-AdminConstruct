@model AdminConstruct.Ryzor.Services.ExcelImportResult
@{
    ViewData["Title"] = "Resultado de importación";
}

<h1 class="text-2xl font-semibold mb-4">Resultado de importación</h1>

<div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-6">
    <div class="bg-white rounded-lg shadow p-6">
        <div class="text-sm text-gray-500">Productos upsert</div>
        <div class="text-3xl font-semibold">@Model.ProductsUpserted</div>
    </div>
    <div class="bg-white rounded-lg shadow p-6">
        <div class="text-sm text-gray-500">Clientes upsert</div>
        <div class="text-3xl font-semibold">@Model.CustomersUpserted</div>
    </div>
    <div class="bg-white rounded-lg shadow p-6">
        <div class="text-sm text-gray-500">Ventas creadas</div>
        <div class="text-3xl font-semibold">@Model.SalesCreated</div>
    </div>
</div>

@if (Model.Errors.Any())
{
    <div class="bg-white rounded-lg shadow p-6">
        <h2 class="text-lg font-semibold mb-2">Errores / Inconsistencias</h2>
        <ul class="list-disc ml-6 space-y-1">
            @foreach (var e in Model.Errors)
            {
                <li>@e</li>
            }
        </ul>
    </div>
}

<div class="mt-6">
    <a class="px-4 py-2 bg-gray-200 rounded" asp-action="Index">Volver</a>
 </div>


