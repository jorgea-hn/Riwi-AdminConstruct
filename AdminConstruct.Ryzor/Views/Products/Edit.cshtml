@model AdminConstruct.Ryzor.Models.Product
@{
    ViewData["Title"] = "Editar producto";
}

<h1 class="text-2xl font-semibold mb-4">Editar producto</h1>

<form asp-action="Edit" method="post" class="bg-white rounded-lg shadow p-6 space-y-4">
    <input type="hidden" asp-for="Id" />
    <div>
        <label class="block text-sm mb-1">Nombre</label>
        <input asp-for="Name" class="border rounded px-3 py-2 w-full" />
        <span asp-validation-for="Name" class="text-red-600 text-sm"></span>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
            <label class="block text-sm mb-1">Precio</label>
            <input asp-for="Price" class="border rounded px-3 py-2 w-full" />
            <span asp-validation-for="Price" class="text-red-600 text-sm"></span>
        </div>
        <div>
            <label class="block text-sm mb-1">Stock</label>
            <input asp-for="StockQuantity" class="border rounded px-3 py-2 w-full" />
            <span asp-validation-for="StockQuantity" class="text-red-600 text-sm"></span>
        </div>
    </div>
    <div>
        <label class="block text-sm mb-1">Descripci√≥n</label>
        <textarea asp-for="Description" class="border rounded px-3 py-2 w-full" rows="3"></textarea>
        <span asp-validation-for="Description" class="text-red-600 text-sm"></span>
    </div>
    <div class="flex gap-3">
        <button class="px-4 py-2 bg-blue-600 text-white rounded">Guardar</button>
        <a class="px-4 py-2 bg-gray-200 rounded" asp-action="Index">Cancelar</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


